{
    "name": "kook-client",
    "version": "1.0.1",
    "description": "nodejs 平台 kook机器人开发SDK",
    "type": "module",
    "main": "lib/index.js",
    "engines": {
        "node": ">=16"
    },
    "scripts": {
        "start": "node .",
        "compile": "tsc --project tsconfig.build.json && tsc-alias -p tsconfig.build.json",
        "dtsc": "dtsc --project tsconfig.dtsc.json",
        "clean": "rm -rf ./lib",
        "build": "npm run compile && npm run dtsc",
        "dev": "ts-node-dev -r tsconfig-paths/register ./src/test.ts",
        "pub": "npm publish --access public",
        "docs:dev": "vitepress dev docs --port 5566 --host 0.0.0.0",
        "docs:build": "vitepress build docs",
        "docs:serve": "vitepress serve docs",
        "test": "echo \"Error: no test specified\" && exit 1"
    },
    "files": [
        "lib",
        "LICENSE",
        "README.md"
    ],
    "repository": {
        "url": "https://github.com/zhinjs/kook-client.git",
        "type": "git"
    },
    "keywords": [
        "kook",
        "robot",
        "开黑啦"
    ],
    "author": "凉菜",
    "license": "MIT",
    "dependencies": {
        "axios": "^1.11.0",
        "dotenv": "^17.2.1",
        "formdata-node": "^6.0.3",
        "log4js": "^6.9.1",
        "node-persist": "^4.0.4",
        "reconnecting-websocket": "^4.4.0",
        "ws": "^8.18.2"
    },
    "devDependencies": {
        "@types/node": "^24.3.0",
        "@types/ws": "^8.5.10",
        "dtsc": "^2.3.0",
        "ts-node-dev": "^2.0.0",
        "tsc-alias": "^1.8.16",
        "tsconfig-paths": "^4.2.0",
        "typescript": "^5.9.2",
        "vitepress": "^1.6.4"
    }
}
